<% form_for @user_session, :url => sessions_path do |f| %>
  <legend>Enter your email address and password to log in. 
    <%= link_to 'Click here', new_password_reset_url %> to reset your password if 
    you have forgotten it. </legend>
  <%= error_messages_for :user_session %>
  <fieldset>
  	<br/>
  	<table>
	  	<tr>
	  		<td>
	  			  <%= f.label :email, 'Email' %>
	  		</td>
	  		<td>
	  		<%= f.text_field :email,:onblur => "javascript:ValidateBox(this)"%>	
	  		</td>
	    </tr>
		<tr>
			<td>
			<%= f.label :password, 'Password' %>
			</td>
			<td>
	 		<%= f.password_field :password %>
	 		</td>
	    </tr>
    </table>
    <p>
      <%= f.submit 'Log in' %>
    </p>
  </fieldset>
<% end %>
