<% @page_name = "log_in" %>

<% form_for @user_session, :url => sessions_path, :method => :post do |f| %>

<h1>Log in</h1>


<%= error_messages_for :user_session %>


<p>
	<%= f.label :email, 'Your e-mail address', :class=>"standard" %><br />
	<%= f.text_field :email, :class=>'standard', :onblur => "javascript:ValidateBox(this)"%>	
</p>
<p>
	<%= f.label :password, 'Your password', :class=>"standard" %><br />
	<%= f.password_field :password, :class=>"standard" %>
</p>


    <p>
      <%= f.submit 'Log in' %>
    </p>

<h2><%= link_to 'Reset your password', new_password_reset_url %></h2>
<% end %>
