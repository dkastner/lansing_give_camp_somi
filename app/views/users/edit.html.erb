<h2>Editing User Profile</h2>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

	<div class="profile_information">
      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
    	<p>
        <%= f.label :password %><br />
				(Enter new password to change)<br />
        <%= f.text_field :password %>
    	</p>
      <p>
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </p>
	</div>
	<div class="profile_address">
      <p>
        <%= f.label :address1 %><br />
        <%= f.text_field :address1 %>
      </p>
      <p>
        <%= f.label :address2 %><br />
        <%= f.text_field :address2 %>
      </p>
      <p>
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </p>
      <p>
        <%= f.label :state %><br />
        <%= f.text_field :state %>
      </p>
      <p>
        <%= f.label :zip %><br />
        <%= f.text_field :zip %>
      </p>
    	</div>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
